@model RepairFirm.Shared.Models.HomeData
<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>Digitf</title>

  <!-- slider stylesheet -->
  <link rel="stylesheet" type="text/css"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />

  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,700&display=swap" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="css/responsive.css" rel="stylesheet" />
</head>

<body>
  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="index.html">
            <img src="images/logo.png" alt="" />
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse text-center" style="max-width: 800px; margin: 0 auto;" >
             @if (Model.IsConnected)
            {
              <ul class="navbar-nav  ">
              <li class="nav-item active">
                <a class="nav-link" href="Home">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="Storage" >Storage data</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="Meta">Metadata </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="Diagram">Diagram </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="Report"> Report </a>
              </li>
            </ul>
             }
            else
            {
               <ul class="navbar-nav  ">
              <li class="nav-item active">
                <a class="nav-link" href="Home">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <label class="nav-link"   >Storage data</label>
              </li>
              <li class="nav-item">
                <label class="nav-link" >Metadata </label>
              </li>
              <li class="nav-item">
                <label class="nav-link" >Diagram </label>
              </li>
              <li class="nav-item">
                <label class="nav-link"  > Report </label>
              </li>
            </ul>
            }
        </nav>
      </div>
    </header>
    <!-- end header section -->
    <!-- slider section -->
    <section class="slider_section " >
      <div class="play_btn">
        <a href="">
          <img src="images/play.png" alt="">
        </a>
      </div>
            
        <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner">
            
           @if (Model.IsConnected)
            {
                <div class="carousel-item active">
              <div class="row">
                <div class="col-md-6">
                  <div class="detail-box">
                    <h1>
                      DATA BASE
                      <span>
                        CONNECTED
                      </span>
                    </h1>
                  </div>
                </div>
           
              </div>
                </div>
            }
            else
            {
                 <div class="carousel-item active">
              <div class="row">
                <div class="col-md-6">
                  <div class="detail-box">
                    <h1>
                      DATA BASE
                      <span>
                        DISCONNECTED
                      </span>
                    </h1> 
                  </div>
                </div>             
              </div>
            </div>
            }
            </div>
          </div>
        </div>
      
    </section>
    <!-- end slider section -->
  </div>

  <!-- trending section -->

  <section class="trending_section layout_padding">
    <div id="accordion">
      <div class="container">
        <div class="row justify-content-sm-between">
            <div>
                <div class="col">
                    <h4 style="width: 400px">Популярність типів ремонту (у скількох контрактах присутній)</h4>
                    <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="200">Repair Name</th>  
                        <th  width="200">Contracts with repair count</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                @foreach (var item in @Model.RepairCountChartDatas)
                                {
                                    <tr>
                                        <td width="200">@item.RepairType</td>
                                        <td width="200">@item.RepairCount</td>
                                    </tr>
                                }
               </tbody> 
              
            </table>
                </div>
               
               
            </div>
           <div>
               <div class="col">
                    <h4 style="width: 400px">Кількість укладених контрактів по містах</h4>
                <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="200">City Name</th>  
                        <th  width="200">Contract count in city</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                @foreach (var item in @Model.DepartmentContractDatas)
                                {
                                    <tr>
                                        <td width="200">@item.CityName</td>
                                        <td width="200">@item.ServicesCount</td>
                                    </tr>
                                }
               </tbody> 
              
            </table> 
            </div>
             </div>
           <div>
               <div class="col">
                    <h4 style="width: 400px">Сумарна кількість робітників для послуг</h4>
                <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="200">Repair Type</th>  
                        <th  width="200">Employee Count</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                @foreach (var item in @Model.EmployeeForRepairDatas)
                                {
                                    <tr>
                                        <td width="200">@item.RepairType</td>
                                        <td width="200">@item.EmpoyeeCount</td>
                                    </tr>
                                }
               </tbody> 
              
            </table> 
            </div>
             </div>
               @foreach (var group in @Model.RepairsPriceForContractsDatas)
                    {
                        <div>
               <div class="col">
                    <h4 style="width: 400px">Вартість контрактів у місті @group.Key</h4>
                <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="200">Contract Number</th>  
                        <th  width="200">Contract Total Price</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                @foreach (var item in group.Value)
                                {
                                    <tr>
                                        <td width="200">@item.Index контракт</td>
                                        <td width="200">@item.TotalPrice</td>
                                    </tr>
                                }
               </tbody> 
              
            </table> 
            </div>
             </div>
                    }
             @foreach (var group in @Model.RepairsByCitiesDatas)
                    {
                        <div>
               <div class="col">
                    <h4 style="width: 400px">Кількість та типи послуг які надані у місті @group.Key</h4>
                <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="200">Repair Type</th>  
                        <th  width="200">Repair Count</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                @foreach (var item in group.Value)
                                {
                                    <tr>
                                        <td width="200">@item.RepairType</td>
                                        <td width="200">@item.RepairCount</td>
                                    </tr>
                                }
               </tbody> 
              
            </table> 
            </div>
             </div>
                    }
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>

  <!-- end trending section -->


  <!-- brand section -->

  <section class="brand_section">
    <div class="container">
      <div class="heading_container">
        <h2>
          Storage Actions
        </h2>
      </div>
      <a href="Home/Perv" class="brand-btn">
        Виконати первинну заливку
      </a>
       <a href="Home/Increment" class="brand-btn">
        Виконати інкрементальну заливку
      </a>
       <a href="Home/Clear" class="brand-btn">
       Очистити сховище
      </a>
    </div>
  </section>

  <!-- end brand section -->
  <!-- contact section -->

  <section class="contact_section layout_padding">
    <div class="container ">
      <div class="heading_container">
        <h2 class="">
          Contact Us
        </h2>
      </div>

    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <form action="">
            <div>
              <input type="text" placeholder="Name" />
            </div>
            <div>
              <input type="email" placeholder="Email" />
            </div>
            <div>
              <input type="text" placeholder="Phone" />
            </div>
            <div>
              <input type="text" class="message-box" placeholder="Message" />
            </div>
            <div class="d-flex ">
              <button>
                SEND
              </button>
             
            </div>
          </form>
        </div>
        <div class="col-md-6">
          <div class="map_container">
            <div class="map-responsive">
              <iframe
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Lviv+Stepan+Bandera"
                width="600" height="300" frameborder="0" style="border:0; width: 100%; height:100%"
                allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- end contact section -->


  <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="js/bootstrap.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js">
  </script>
  <script type="text/javascript">
    $(".owl-carousel").owlCarousel({
      loop: true,
      margin: 10,
      nav: true,
      navText: [],
      autoplay: true,
      autoplayHoverPause: true,
      responsive: {
        0: {
          items: 1
        },
        420: {
          items: 2
        },
        1000: {
          items: 5
        }
      }

    });
  </script>
  <script>
    var nav = $("#navbarSupportedContent");
    var btn = $(".custom_menu-btn");
    btn.click
    btn.click(function (e) {

      e.preventDefault();
      nav.toggleClass("lg_nav-toggle");
      document.querySelector(".custom_menu-btn").classList.toggle("menu_btn-style")
    });
  </script>
  <script>
    $('.carousel').on('slid.bs.carousel', function () {
      $(".indicator-2 li").removeClass("active");
      indicators = $(".carousel-indicators li.active").data("slide-to");
      a = $(".indicator-2").find("[data-slide-to='" + indicators + "']").addClass("active");
      console.log(indicators);

    })
  </script>

</body>


</html>