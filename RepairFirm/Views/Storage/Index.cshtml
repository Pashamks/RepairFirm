  <section class="trending_section layout_padding">
    <div id="accordion" >
      <div class="container">
          <h1 style="text-align: center;">All repair services</h1>
        <div class="row  justify-content-sm-between">
            <div class="col-md-12">

            <div  style="text-align: center; overflow-y: auto; ">  
            <table class="table table-bordered table-fixed" id="tblRepairs">  
                 <thead>
                    <tr>  
                        <th width="100">Repair Start Date</th>  
                        <th  width="100">Repair End Date</th>  
                        <th width="200">Repair</th>  
                        <th width="70">Repair Count</th>  
                        <th width="100">Repair Total Hours</th>  
                        <th>Repair Service Total Price</th>  
                        <th>Relation To Total Contract Hours</th>  
                        <th>Relation To Total Contract Price</th>  
                        <th>Employee Count</th>  
                    </tr>  
                </thead>
                   
            <tbody class="scrollit">
                 
                @foreach (var item in Model)
                {
                    <tr>
                    <td  width="100">@Html.DisplayFor(modelItem => item.RepairStartDate)</td>
                    <td  width="100">@Html.DisplayFor(modelItem => item.RepairEndDate)</td>
                    <td width="200">@Html.DisplayFor(modelItem => item.RepairName)</td>
                    <td  width="70">@Html.DisplayFor(modelItem => item.RepairCount)</td>
                    <td width="100">@Html.DisplayFor(modelItem => item.RepairTotalHours)</td>
                    <td width="154">@Html.DisplayFor(modelItem => item.RepairServiceTotalPrice)</td>
                    <td width="185">@Html.DisplayFor(modelItem => item.RelationToTotalContractHours)</td>
                    <td width="183">@Html.DisplayFor(modelItem => item.RelationToTotalContractPrice)</td>
                    <td  width="100">@Html.DisplayFor(modelItem => item.EmployeeCount)</td>
                    </tr>
                }
               </tbody> 
              
            </table>  
             
            <form action="Storage/Filter" method="post" class="text-center">
                 <div class="container">
                     <div class="col-md-12">
                <div class="row justify-content-sm-between py-1">
                    <div>
                        <input type="checkbox" id="IsMinRepairStartDate" name="IsMinRepairStartDate">
                    <label for="checkbox">Repair Start Date:</label>    
                <input id="MinRepairStartDate" name="MinRepairStartDate" type="date"> </input>
                <label style="font-size:large">-</label>
                 <input id="MaxRepairStartDate" name="MaxRepairStartDate" type="date"> </input>
                    </div>
                   <div>
                   
                 </div>
                   <div>
                <input type="checkbox" id="IsMinRepairEndDate" name="IsMinRepairEndDate">
                <label for="checkbox">Repair End Date:</label>
                 <label for="checkbox">Repair Start Date:</label>    
                <input id="MinRepairEndDate" name="MinRepairEndDate" type="date"> </input>
                 <label style="font-size:large">-</label>
                 <input id="MaxRepairEndDate" name="MaxRepairEndDate" type="date"> </input>
                </div>
                </div>
               
                <div class="row justify-content-sm-between py-1">
                  
                   <div>
                        <input type="checkbox" id="IsRepairName" name="IsRepairName">
                <label for="checkbox">Repair Name:</label>
                <select id="RepairName" name="RepairName" multiple>
                                        @foreach(var item in ViewBag.RepairList)
                                        {
                                            <option value="@item">@item</option>
                                        }
                </select>
                   </div>   
                <div>
                    <div class="col">
                         <input type="checkbox" id="IsMinRepairCount" name="IsMinRepairCount">
                 <label for="checkbox">Repair Count:</label>
                <input type="number"  style="width: 100px;" id="MinRepairCount" name="MinRepairCount"> </input>
                 <label style="font-size:large">-</label>
                <input type="number"  style="width: 100px;"  id="MaxRepairCount" name="MaxRepairCount"></input>
                        </div>
                      
                        <div>
                 <input type="checkbox" id="IsMinRepairTotalHours" name="IsMinRepairTotalHours">
                 <label for="checkbox"> Repair Total Hours:</label>
                <input type="number"  style="width: 100px;" id="MinRepairTotalHours" name="MinRepairTotalHours"> </input>
                 <label style="font-size:large">-</label>
                <input type="number"  style="width: 100px;" id="MaxRepairTotalHours" name="MaxRepairTotalHours"></input>
                        </div>
                 </div>
                </div>
                


                 <div class="row justify-content-lg-between py-1">
                
                      <div > 
                          <input type="checkbox" id="IsMinRepairServiceTotalPrice" name="IsMinRepairServiceTotalPrice">  
                <label for="checkbox">Repair Service Total Price:</label>
                    
                <input type="number" style="width: 100px;" id="MinRepairServiceTotalPrice" name="MinRepairServiceTotalPrice"> </input>
                 <label style="font-size:large">-</label>
                  <input type="number" style="width: 100px;" id="MaxRepairServiceTotalPrice" name="MaxRepairServiceTotalPrice"> </input>
                      </div>

                    <div>
                        <input type="checkbox" id="IsMinRelationToTotalContractHours" name="IsMinRelationToTotalContractHours">
                <label for="checkbox">Relation To Total Contract Hours:</label>
                
                <input type="number" style="width: 100px;" id="MinRelationToTotalContractHours" name="MinRelationToTotalContractHours"> </input>
                 <label style="font-size:large">-</label>
                 <input type="number"  style="width: 100px;" id="MaxRelationToTotalContractHours" name="MaxRelationToTotalContractHours"> </input>
                    </div>
                 
                </div>

               <div class="row justify-content-sm-between py-1">
                   <div >
                       <input type="checkbox" id="IsMinRelationToTotalContractPrice" name="IsMinRelationToTotalContractPrice">
                <label for="checkbox"> Relation To Total Contract Price:</label>
               
                <input type="number" style="width: 100px;" id="MinRelationToTotalContractPrice" name="MinRelationToTotalContractPrice"> </input>
                 <label style="font-size:large">-</label>
                 <input type="number" style="width: 100px;" id="MaxRelationToTotalContractPrice" name="MaxRelationToTotalContractPrice"> </input>
                   </div>

               <div>
                   <input type="checkbox" id="IsMinEmployeeCount" name="IsMinEmployeeCount">
                <label for="checkbox">Employee Count:</label>
              
                <input type="number" style="width: 100px;" id="MinEmployeeCount" name="MinEmployeeCount"></input>
                 <label style="font-size:large">-</label>
                <input type="number"style="width: 100px;" id="MaxEmployeeCount" name="MaxEmployeeCount"></input>
                   
                </div>
               
                </div>
                </div>
                 <div class="row justify-content-center">
                    <button type="submit">Filter</button>
               </div>
            </form>
            <form method="post" action="Storage/Reload">
                <button type="submit">Reload</button>
            </form>
